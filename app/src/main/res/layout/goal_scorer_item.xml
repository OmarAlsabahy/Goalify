<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/_15sdp"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/cardNameColor"
        android:gravity="center"
        android:id="@+id/homeScorer"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeScorer"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/cardNameColor"
        android:gravity="center"
        android:id="@+id/homeAssist"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/_15sdp"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/cardNameColor"
        android:gravity="center"
        android:id="@+id/awayScorer"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/awayScorer"
        android:textColor="@color/cardNameColor"
        android:fontFamily="@font/poppinsregular"
        android:textSize="@dimen/_10sdp"
        android:gravity="center"
        android:id="@+id/awayAssist"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/homeScorer"
        app:layout_constraintTop_toTopOf="@id/homeScorer"
        app:layout_constraintBottom_toBottomOf="@id/homeScorer"
        android:layout_marginStart="@dimen/_15sdp"
        android:id="@+id/homeTime"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/awayScorer"
        app:layout_constraintTop_toTopOf="@id/awayScorer"
        app:layout_constraintBottom_toBottomOf="@id/awayScorer"
        android:layout_marginEnd="@dimen/_15sdp"
        android:id="@+id/awayTime"/>
</androidx.constraintlayout.widget.ConstraintLayout>